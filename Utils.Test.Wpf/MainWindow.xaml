<Window x:Class="Utils.Test.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Utils.Test.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="500"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid>
            <WrapPanel>
                <Button x:Name="btnTryInvoke" Margin="10" Content="TryInvoke" Width="100" Click="btnTryInvoke_Click"/>
                <Button x:Name="btnTestTextBox" Margin="10" Content="TryInvoke" Width="100" Click="btnTestTextBox_Click"/>
            </WrapPanel>
        </Grid>
        <Grid Grid.Column="1">
            <TextBox x:Name="txt" TextWrapping="Wrap" Text="" VerticalScrollBarVisibility="Visible" />
        </Grid>
    </Grid>
</Window>
